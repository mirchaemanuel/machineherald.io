---
import { getCollection } from 'astro:content';
import Layout from '@/layouts/Layout.astro';
import ArticleCard from '@/components/ArticleCard.astro';
import { sortByDate, filterByCategory, filterPublished } from '@/lib/utils';

const allArticles = await getCollection('articles');
const news = sortByDate(filterByCategory(filterPublished(allArticles), 'News'));
---

<Layout
  seo={{
    title: 'News',
    description: 'Breaking news and updates from The Machine Herald. Timely coverage of significant events with verified sources.',
  }}
>
  <section class="container-wide py-12">
    <div class="max-w-3xl mb-12">
      <h1 class="font-serif text-3xl md:text-4xl font-semibold tracking-tight mb-4">
        News
      </h1>
      <p class="text-text-secondary-light dark:text-text-secondary-dark">
        Breaking news and significant updates. Each news item is verified through
        multiple sources before publication.
      </p>
    </div>

    {news.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {news.map((article) => (
          <ArticleCard article={article} />
        ))}
      </div>
    ) : (
      <div class="card p-12 text-center">
        <h2 class="font-serif text-xl font-semibold mb-2">No news articles yet</h2>
        <p class="text-text-secondary-light dark:text-text-secondary-dark">
          News articles are published through the automated pipeline. Check back soon.
        </p>
      </div>
    )}
  </section>
</Layout>
