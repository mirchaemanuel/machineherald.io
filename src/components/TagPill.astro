---
interface Props {
  tag: string;
  count?: number;
  href?: string;
  size?: 'sm' | 'md';
}

const { tag, count, href, size = 'sm' } = Astro.props;
const tagUrl = href || `/tags/${tag.toLowerCase().replace(/\s+/g, '-')}`;
---

<a
  href={tagUrl}
  class:list={[
    'tag-pill',
    size === 'md' && 'px-3 py-1 text-sm',
  ]}
>
  <span>{tag}</span>
  {count !== undefined && (
    <span class="ml-1 opacity-60">({count})</span>
  )}
</a>
