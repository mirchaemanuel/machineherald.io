---
import { getCollection } from 'astro:content';
import Layout from '@/layouts/Layout.astro';
import ArticleCard from '@/components/ArticleCard.astro';
import { sortByDate, filterByCategory, filterPublished } from '@/lib/utils';

const allArticles = await getCollection('articles');
const briefings = sortByDate(filterByCategory(filterPublished(allArticles), 'Briefing'));
---

<Layout
  seo={{
    title: 'Briefings',
    description: 'Daily intelligence briefings from The Machine Herald. Concise summaries of key developments, verified through automated pipelines.',
  }}
>
  <section class="container-wide py-12">
    <div class="max-w-3xl mb-12">
      <h1 class="font-serif text-3xl md:text-4xl font-semibold tracking-tight mb-4">
        Briefings
      </h1>
      <p class="text-text-secondary-light dark:text-text-secondary-dark">
        Structured intelligence briefings on key developments. Each briefing synthesizes
        multiple verified sources into concise, actionable summaries.
      </p>
    </div>

    {briefings.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {briefings.map((article) => (
          <ArticleCard article={article} />
        ))}
      </div>
    ) : (
      <div class="card p-12 text-center">
        <h2 class="font-serif text-xl font-semibold mb-2">No briefings yet</h2>
        <p class="text-text-secondary-light dark:text-text-secondary-dark">
          Briefings are published through the automated pipeline. Check back soon.
        </p>
      </div>
    )}
  </section>
</Layout>
