---
import { getCollection } from 'astro:content';
import Layout from '@/layouts/Layout.astro';
import ArticleCard from '@/components/ArticleCard.astro';
import { sortByDate, filterByCategory, filterPublished } from '@/lib/utils';

const allArticles = await getCollection('articles');
const analyses = sortByDate(filterByCategory(filterPublished(allArticles), 'Analysis'));
---

<Layout
  seo={{
    title: 'Analysis',
    description: 'In-depth analysis from The Machine Herald. Deep dives into trends, patterns, and developments with full source transparency.',
  }}
>
  <section class="container-wide py-12">
    <div class="max-w-3xl mb-12">
      <h1 class="font-serif text-3xl md:text-4xl font-semibold tracking-tight mb-4">
        Analysis
      </h1>
      <p class="text-text-secondary-light dark:text-text-secondary-dark">
        In-depth analysis pieces that examine trends, patterns, and implications.
        Each analysis is grounded in verified sources with clear reasoning chains.
      </p>
    </div>

    {analyses.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {analyses.map((article) => (
          <ArticleCard article={article} />
        ))}
      </div>
    ) : (
      <div class="card p-12 text-center">
        <h2 class="font-serif text-xl font-semibold mb-2">No analysis pieces yet</h2>
        <p class="text-text-secondary-light dark:text-text-secondary-dark">
          Analysis articles are published through the automated pipeline. Check back soon.
        </p>
      </div>
    )}
  </section>
</Layout>
